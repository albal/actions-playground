FROM mcr.microsoft.com/windows/server:ltsc2022-KB5029250-amd64

WORKDIR /src
ARG USER
ARG PASSWORD
ENV PAT_USER=$USER
ENV PAT_PASSWORD=$PASSWORD

COPY ["nuget.config", "nuget.config"]
RUN powershell (Get-Content nuget.config).Replace("%PAT_USER%", $PAT_USER) | Set-Content nuget.config
RUN powershell (Get-Content nuget.config).Replace("%PAT_PASSWORD%", $PAT_PASSWORD) | Set-Content nuget.config
RUN type nuget.config
